// Cliente Prisma gerado em JS/TS
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

// Confirguração do datasource(Conexão com o postgresql)

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de usuário

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
